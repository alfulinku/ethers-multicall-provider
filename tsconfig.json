{
  "compilerOptions": {
    "target": "es2020",
    "declaration": true,
    "outDir": "lib",
    "rootDir": ".",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "CommonJS",                                /* Specify what module code is generated. */
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src", "test"]
}
